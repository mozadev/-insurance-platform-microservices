# Environment
ENVIRONMENT=local
LOG_LEVEL=INFO

# AWS Configuration
AWS_REGION=us-east-1
AWS_ENDPOINT_URL=http://localhost:4566  # LocalStack
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test

# Service Ports
GATEWAY_BFF_PORT=8000
POLICY_SVC_PORT=8001
CLAIM_SVC_PORT=8002
SEARCH_SVC_PORT=8005
AUTH_SVC_PORT=8003

# Database Configuration
DYNAMODB_ENDPOINT_URL=http://localhost:4566
DYNAMODB_REGION=us-east-1

# OpenSearch Configuration
OPENSEARCH_ENDPOINT=http://localhost:9200
OPENSEARCH_USERNAME=admin
OPENSEARCH_PASSWORD=admin
OPENSEARCH_INDEX_PREFIX=ins

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_DB=0

# S3 Configuration
S3_BRONZE_BUCKET=ins-bronze
S3_SILVER_BUCKET=ins-silver
S3_ENDPOINT_URL=http://localhost:4566

# SNS Topics
POLICIES_TOPIC_ARN=arn:aws:sns:us-east-1:000000000000:policies-topic
CLAIMS_TOPIC_ARN=arn:aws:sns:us-east-1:000000000000:claims-topic

# SQS Queues
POLICIES_QUEUE_URL=http://localhost:4566/000000000000/policies-queue
CLAIMS_QUEUE_URL=http://localhost:4566/000000000000/claims-queue

# JWT Configuration (Local Development)
JWT_SECRET_KEY=your-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Observability
OTEL_SERVICE_NAME=insurance-platform
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_RESOURCE_ATTRIBUTES=service.name=insurance-platform,service.version=1.0.0

# Circuit Breaker
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_RECOVERY_TIMEOUT=60

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST=10
